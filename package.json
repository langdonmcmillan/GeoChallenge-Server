{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "Bowden Kelly",
    "license": "MIT",
    "scripts": {
        "build": "npm run build-ts && npm run tslint",
        "serve": "node dist/index.js",
        "watch-node": "nodemon dist/index.js",
        "watch": "concurrently -k -p \"[{name}]\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
        "test": "jest --forceExit",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "client": "cd ../client && npm run start",
        "dev": "concurrently \"npm run serve\" \"npm run client\""
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfigFile": "tsconfig.json"
            }
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
        },
        "testMatch": [
            "**/test/**/*.test.(ts|js)"
        ],
        "testEnvironment": "node"
    },
    "dependencies": {
        "async": "^2.6.1",
        "bcrypt": "^3.0.0",
        "body-parser": "^1.18.3",
        "dotenv": "^6.0.0",
        "express": "^4.16.3",
        "express-session": "^1.15.6",
        "express-validator": "^5.2.0",
        "immutable": "^3.8.2",
        "jsonwebtoken": "^8.3.0",
        "mssql": "^4.1.0",
        "nodemailer": "^4.6.7",
        "passport": "^0.4.0",
        "passport-facebook": "^2.1.1",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "uuid": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^2.0.40",
        "@types/bcrypt": "^2.0.0",
        "@types/body-parser": "^1.16.2",
        "@types/dotenv": "^2.0.20",
        "@types/express": "^4.0.35",
        "@types/express-session": "^1.15.5",
        "@types/immutable": "^3.8.7",
        "@types/jest": "^21.1.5",
        "@types/jsonwebtoken": "^7.2.5",
        "@types/mssql": "^4.0.8",
        "@types/node": "^7.0.12",
        "@types/nodemailer": "^1.3.32",
        "@types/passport": "^0.3.3",
        "@types/passport-facebook": "^2.1.3",
        "@types/passport-jwt": "^3.0.0",
        "@types/passport-local": "^1.0.33",
        "@types/uuid": "^3.4.3",
        "concurrently": "^3.4.0",
        "jest": "^21.2.1",
        "node-sass": "^4.5.2",
        "nodemon": "^1.11.0",
        "shelljs": "^0.7.7",
        "supertest": "^2.0.1",
        "ts-jest": "^21.1.5",
        "tslint": "^5.8.0",
        "typescript": "^2.4.0"
    },
    "prettier": {
        "tabWidth": 4,
        "semi": true,
        "print-width": 140
    }
}
